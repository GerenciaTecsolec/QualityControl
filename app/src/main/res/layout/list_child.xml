                android:textColor="@color/Letras"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtdefecto3"
                android:layout_width="59dp"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:background="#999999"
