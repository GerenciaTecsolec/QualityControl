<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:overScrollMode="ifContentScrolls" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ventas1"
        android:scrollbars="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="#888"
            android:text="Quality Control Report."
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/Letras"
            android:textColorLink="@color/Letras"
            android:textSize="25sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CLIENT: "
                android:textColor="@color/Letras"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/Letras" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PLANT: "
                android:textColor="@color/Letras"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtPlanta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Letras" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ORDER #: "
                android:textColor="@color/Letras"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtNumero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="txtOrder"
                android:textColor="@color/Letras" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="59dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="2dp"
                        android:background="@color/naranja"
                        android:gravity="center"
                        android:text="Cod \n Lot" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="2dp"
                        android:background="@color/naranja"
                        android:gravity="center"
                        android:text="Product" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="59dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="2dp"
                        android:background="@color/naranja"
                        android:gravity="center"
                        android:text="Size" />

                </LinearLayout>

                <GridView
                    android:id="@+id/gridfijo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/darker_gray"
                    android:horizontalSpacing="3dp"
                    android:numColumns="1"
                    android:verticalSpacing="3dp" >

                </GridView>

            </LinearLayout>

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView2"
                style="@style/scrollbar_shape_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:fadeScrollbars="false" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/txttitulo"
                                android:layout_width="59dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="2dp"
                                android:background="@color/naranja"
                                android:gravity="center"
                                android:text="Gross\nWeight"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/txtpsoneto"
                                android:layout_width="59dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="2dp"
                                android:background="@color/naranja"
                                android:gravity="center"
                                android:text="Net \n Weight"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/lblredhead"
                                android:layout_width="58dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="2dp"
                                android:background="@color/naranja"
                                android:gravity="center"
                                android:lines="2"
                                android:text="Total \n Pieces"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/lbldeformed"
                                android:layout_width="58dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="2dp"
                                android:background="@color/naranja"
                                android:gravity="center"
                                android:text="Count \n"
                                android:textAlignment="center"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/lbldehydrated"
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="2dp"
                                android:background="@color/naranja"
                                android:gravity="center"
                                android:text="Uniform\n"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/lblbustedhead"
                                android:layout_width="58dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="2dp"
                                android:background="@color/naranja"
                                android:gravity="center"
                                android:text="PPM \n"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/TextView01"
                                android:layout_width="70dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="2dp"
                                android:background="@color/naranja"
                                android:gravity="center"
                                android:text="Textu\n "
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/TextView02"
                                android:layout_width="70dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="2dp"
                                android:background="@color/naranja"
                                android:gravity="center"
                                android:text="Flavor\n "
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/TextView03"
                                android:layout_width="70dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="2dp"
                                android:background="@color/naranja"
                                android:gravity="center"
                                android:text="Olor\n "
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/TextView04"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="2dp"
                                android:background="@color/naranja"
                                android:gravity="center"
                                android:text="Color\n "
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/txttextura"
                                android:layout_width="70dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="2dp"
                                android:background="@color/naranja"
                                android:gravity="center"
                                android:text="TOTAL"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/txttotalpiezas"
                                android:layout_width="90dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="2dp"
                                android:background="@color/naranja"
                                android:gravity="center"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/txtobservacion"
                                android:layout_width="61dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="2dp"
                                android:background="@color/naranja"
                                android:gravity="center"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/txtmelanosisnum"
                                android:layout_width="85dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="2dp"
                                android:background="@color/naranja"
                                android:gravity="center"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/txtppm"
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="2dp"
                                android:background="@color/naranja"
                                android:gravity="center"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/txttotalnum"
                                android:layout_width="75dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="2dp"
                                android:background="@color/naranja"
                                android:gravity="center"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/txttotalpor"
                                android:layout_width="65dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="2dp"
                                android:background="@color/naranja"
                                android:gravity="center"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/txtsoftnum"
                                android:layout_width="85dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="2dp"
                                android:background="@color/naranja"
                                android:gravity="center"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/txtsoftpor"
                                android:layout_width="85dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="2dp"
                                android:background="@color/naranja"
                                android:gravity="center"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/txttienum"
                                android:layout_width="85dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="2dp"
                                android:background="@color/naranja"
                                android:gravity="center"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/txttiepor"
                                android:layout_width="70dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="2dp"
                                android:background="@color/naranja"
                                android:gravity="center"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/txtdeformednum"
                                android:layout_width="85dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="2dp"
                                android:background="@color/naranja"
                                android:gravity="center"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/lblsoft"
                                android:layout_width="70dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="2dp"
                                android:background="@color/naranja"
                                android:gravity="center"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/lblloosehead"
                                android:layout_width="65dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="2dp"
                                android:background="@color/naranja"
                                android:gravity="center"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/molted"
                                android:layout_width="58dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="2dp"
                                android:background="@color/naranja"
                                android:gravity="center"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/outsize"
                                android:layout_width="70dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="2dp"
                                android:background="@color/naranja"
                                android:gravity="center"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/redhead"
                                android:layout_width="70dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="2dp"
                                android:background="@color/naranja"
                                android:gravity="center"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/redshell"
                                android:layout_width="58dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="2dp"
                                android:background="@color/naranja"
                                android:gravity="center"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/softshell"
                                android:layout_width="58dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="2dp"
                                android:background="@color/naranja"
                                android:gravity="center"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/strangematerials"
                                android:layout_width="65dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="2dp"
                                android:background="@color/naranja"
                                android:gravity="center"
                                android:textAppearance="?android:attr/textAppearanceSmall" />
                        </LinearLayout>

                        <GridView
                            android:id="@+id/reporte_muestras"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:background="@android:color/darker_gray"
                            android:horizontalSpacing="3dp"
                            android:minHeight="130dp"
                            android:numColumns="1"
                            android:textAlignment="center"
                            android:verticalSpacing="3dp" >
                        </GridView>
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>

    </LinearLayout>

    </FrameLayout>

</RelativeLayout>
