                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:textColor="@color/Letras" >

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <!-- Defectos -->

