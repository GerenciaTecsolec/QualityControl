                android:layout_height="wrap_content" 
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblMixSpecies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MIX SPECES:"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/Letras"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtmixspecies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColor="@color/Letras" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblmolted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MOLTED:"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/Letras"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtmolted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColor="@color/Letras" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lbloutsize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OUT OF SIZE:"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/Letras"
                    android:textStyle="bold" />

