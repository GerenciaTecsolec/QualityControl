                <EditText
                    android:id="@+id/txtdamaged"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColor="@color/Letras" />
            </LinearLayout>

            <LinearLayout
